<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.collections.*?>
<?import java.lang.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="ui.CadastroEquipeController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <top>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Cadastro de Equipe" style="-fx-font-size: 24px;">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
            <Separator/>
        </VBox>
    </top>
    
    <center>
        <GridPane hgap="10" vgap="15">
            <padding>
                <Insets top="20" right="0" bottom="20" left="0"/>
            </padding>
            
            <!-- Nome -->
            <Label text="Nome da Equipe:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="300"/>
            
            <!-- Descrição -->
            <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="descricaoField" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="100"/>
            
            <!-- Projeto -->
            <Label text="Projeto:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="projetoComboBox" GridPane.rowIndex="2" GridPane.columnIndex="1" prefWidth="300"/>
            
            <!-- Membros -->
            <Label text="Membros:" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
            <VBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
                <ListView fx:id="membrosListView" prefHeight="150"/>
                <HBox spacing="5">
                    <Button text="Adicionar Membro" onAction="#handleAdicionarMembro"/>
                    <Button text="Remover Membro" onAction="#handleRemoverMembro"/>
                </HBox>
            </VBox>
        </GridPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancelar" onAction="#handleCancelar" prefWidth="100"/>
            <Button text="Salvar" onAction="#handleSalvar" prefWidth="100" defaultButton="true"/>
        </HBox>
    </bottom>
</BorderPane>